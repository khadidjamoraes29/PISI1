
# registration.kv

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0.2, 0.2, 0.2, 1  # Cor de fundo (r, g, b, a)
            Rectangle:
                pos: self.pos
                size: self.size
        #Button:
        #    text: 'Consultor'
        #    on_press: root.goto_auth_screen('Consultor')
        Button:
            text: 'Empresa'
            on_press: root.goto_auth_screen('Empresa')

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        Image:
            source: "images\\JGT_AZUL.png"
            size_hint: .50, .50
            pos_hint: {"center_x": .54, "center_y": .6}
            canvas.before:
                Color:
                    rgb: 1, .85, .825, 1

        MDLabel:
            text: "Deslize para continuar"   
            pos_hint: {"center_x": .5, "center_y": .21}       
            halign: "center"
            theme_text_color: "Custom"
            text_color: 229/255, 199/255, 63/255, 1
            font_size:"13sp"
            font_name: "Poppins-Medium.ttf"


<AuthScreen>:
    MDFloatLayout:
        md_bg_color: 0.070588, 0.070588, 0.462745, 1

        Image:
            source: "images\\usuario.png"
            size_hint: .50, .50
            pos_hint: {"center_x": .5, "center_y": .8}
            canvas.before:
                Color:
                    rgb: 1, .85, .825, 1

        MDLabel:
            id: title_label
            text: "Cadastro e Login"
            size_hint: None, None
            height: '40dp'
            pos_hint: {'center_x': 0.5, "center_y": 0.7}
            text_color: 1, 1, 1, 1
            font_size: "20sp"
            font_name: "Poppins-SemiBold.ttf"
            theme_text_color: "Custom"
            halign: 'center'

        MDTextField:
            id: username_input
            pos_hint: {"center_x": 0.5, "center_y": 0.55}
            hint_text: "Usuário"
            size_hint_x: None
            width: 250
            line_color_normal: 0.945, 0.949, 0.949, 1.0
            line_color_focus: 0.945, 0.949, 0.949, 1.0  # Define a cor de destaque para a mesma cor normal
            helper_text: "Digite o nome de usuário no local"
            helper_text_mode: "on_focus"
            icon_right: "earth"
            icon_right_color: 1, 0.5, 0, 1
            required: True

        MDTextField:
            id: password_input
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
            hint_text: "Senha"
            size_hint_x: None
            width: 250
            line_color_normal: 0.945, 0.949, 0.949, 1.0
            line_color_focus: 0.945, 0.949, 0.949, 1.0  # Define a cor de destaque para a mesma cor normal
            helper_text: "Digite a senha de usuário no local"
            helper_text_mode: "on_focus"
            icon_right: "key"
            icon_right_color: 1, 0.5, 0, 1
            required: True

        MDRaisedButton:
            text: 'Cadastrar'
            md_bg_color: 0.945, 0.949, 0.949, 1.0
            theme_text_color: 'Custom'
            size_hint: None, None
            size: 300, '50dp'
            pos_hint: {'center_x': 0.35, "center_y": 0.3}
            text_color: 0, 0, 0, 1  # Cor preta
            on_press: root.register()
            size_hint: None, None
            width: '150dp'          

        MDRaisedButton:
            text: 'Login'
            md_bg_color: 0.945, 0.949, 0.949, 1.0
            theme_text_color: 'Custom'
            size_hint: None, None
            size: 300, '50dp'
            pos_hint: {'center_x': 0.65, "center_y": 0.3}
            text_color: 0, 0, 0, 1  # Cor preta
            on_press: root.login()
            size_hint: None, None
            width: '150dp'

